<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".machineFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/machineName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="name"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/machineStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="status"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/machineStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="studentNumber"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/machineProductsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="ProductsList"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/machineAmountOfProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="AmountOfProducts"
            android:textSize="22sp"/>
    </LinearLayout>

</FrameLayout>