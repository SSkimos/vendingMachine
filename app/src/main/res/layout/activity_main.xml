<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:background="#7B68EE"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/machineName1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#E6E6FA"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/machineStatus1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#E6E6FA"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/machineStudent1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#E6E6FA"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/machineProductList1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#E6E6FA"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/machineAmountProduct1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#E6E6FA"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="60dp"
                android:background="#7B68EE"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/machineName2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#E6E6FA"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/machineStatus2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#E6E6FA"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/machineStudent2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#E6E6FA"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/machineProductList2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#E6E6FA"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/machineAmountProduct2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#E6E6FA"
                    android:text="TextView" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:background="#7B68EE"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/machineName3"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#E6E6FA"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/machineStatus3"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#E6E6FA"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/machineStudent3"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#E6E6FA"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/machineProductList3"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#E6E6FA"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/machineAmountProduct3"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#E6E6FA"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="60dp"
                android:background="#7B68EE"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/machineName4"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#E6E6FA"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/machineStatus4"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#E6E6FA"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/machineStudent4"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#E6E6FA"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/machineProductList4"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#E6E6FA"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/machineAmountProduct4"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#E6E6FA"
                    android:text="TextView" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/generateStudents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="start"
                app:backgroundTint="#8A2BE2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/chooseProduct"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"></Spinner>

                <Spinner
                    android:id="@+id/chooseMachine"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></Spinner>

                <EditText
                    android:id="@+id/AmountProduct"
                    android:layout_width="141dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/addProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="add"
                    app:backgroundTint="#8A2BE2" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>